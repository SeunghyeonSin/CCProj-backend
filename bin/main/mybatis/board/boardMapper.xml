<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.laonstory.mapper.BoardMapper">
	
	<!-- 게시글 불러오기 -->
	<select id="getBoard" parameterType="com.laonstory.vo.BoardVO" resultType="com.laonstory.vo.BoardVO">
		SELECT * FROM board WHERE bnum=#{bnum}
	</select>
	
	<!-- 게시글 리스트 불러오기 -->
	<select id="getListBoard" resultType="com.laonstory.vo.BoardVO">
		SELECT * FROM board
	</select>
	
	<!-- 게시글 입력 -->
	<insert id="insertBoard" parameterType="com.laonstory.vo.BoardVO" useGeneratedKeys="true" keyProperty="idx">
		INSERT INTO board(nickname, title, content, file) VALUES(#{nickname}, #{title}, #{content}, #{file})
	</insert>
	
	<!-- 게시글 수정 -->
	<update id="updateBoard" parameterType="com.laonstory.vo.BoardVO">
		UPDATE board SET title=#{title}, content=#{content}, file=#{file} where bnum=#{bnum}
	</update>
	
	<!-- 게시글 삭제 -->
	<delete id="deleteBoard" parameterType="int">
		DELETE FROM board WHERE bnum=#{bnum}
	</delete>
	
	<!-- 게시글 검색 -->
	<select id="getListSearch" resultType="com.laonstory.vo.SearchVO">
		SELECT * FROM board WHERE ${searchCondition} like concat('%', #{searchKeyword}, '%')
	</select>

</mapper>