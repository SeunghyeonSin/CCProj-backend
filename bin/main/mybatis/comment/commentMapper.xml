<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.laonstory.mapper.CommentMapper">
	
	<!-- 댓글 개수 확인 -->
	<select id="countComment" resultType="com.laonstory.vo.CommentVO">
		SELECT COUNT(*) FROM comment
	</select>
	
	<!-- 댓글 불러오기 -->
	<select id="getComment" resultType="com.laonstory.vo.CommentVO">
		SELECT * FROM comment WHERE commentid=#{commentid}
	</select>
	
	<!-- 댓글 리스트 불러오기 -->
	<select id="getListComment" resultType="com.laonstory.vo.CommentVO">
		SELECT * FROM comment
	</select>
	
	<!-- 댓글 입력 -->
	<insert id="insertComment" parameterType="com.laonstory.vo.CommentVO">
		INSERT INTO comment(boardid, writer, content) VALUES(#{boardid}, #{writer}, #{content})
	</insert>
	
	<!-- 댓글 수정 -->
	<update id="updateComment" parameterType="com.laonstory.vo.CommentVO">
		UPDATE comment SET content=#{content} where commentid=#{commentid}
	</update>
	
	<!-- 댓글 삭제 -->
	<delete id="deleteComment" parameterType="com.laonstory.vo.CommentVO">
		DELETE FROM comment WHERE commentid=#{commentid}
	</delete>
	
	<!-- 게시글 검색 
	<select id="getListSearch" resultType="com.laonstory.vo.SearchVO">
		SELECT * FROM board WHERE ${searchCondition} like concat('%', #{searchKeyword}, '%')
	</select> -->

</mapper>